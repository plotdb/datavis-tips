.chartico, .catico, .encico, .dimico
  text-align: center
  margin-bottom: 10px
  &:before
    content: " "
    display: block
    width: 128px
    height: 128px
    background: #eee
    border: 5px solid #fff
    border-radius: 50%
    margin: auto
.chartico.no-border, .catico.no-border, .encico.no-border, .dimico.no-border
  &:before
    border: 0

.chartico.sm, .catico.sm, .encico.sm, .dimico.sm
  &:before
    width: 64px
    height: 64px
    border-width: 4px
  margin-left: 5px
  margin-right: 5px
  display: inline-block

.chartico.md, .catico.md, .encico.md, .dimico.md
  &:before
    width: 90px
    height: 90px
    border-width: 4px
  margin-left: 5px
  margin-right: 5px
  display: inline-block

.chartico.text, .catico.text, .encico.text, .dimico.text
  &:before
    background: #fff
    background-position: center center
    background-repeat: no-repeat
  margin-right: 10px
  margin-left: 10px
  width: auto!important
  &:after
    color: #444
    font-weight: 400
    font-size: 12px
    display: block

.chartico.shadow, .catico.shadow, .encico.shadow, .dimico.shadow
  &:before
    box-shadow: 0 2px 3px rgba(0,0,0,0.2)
    margin-bottom: 5px

.dimico
  position: relative
.taxico
  position: absolute
  top: 0
  left: 0
  width:100%
  height: 100%
  background-repeat: no-repeat
.dimico.text .taxico:after
  position: absolute
  bottom: -13px
  font-size: 12px
  width: 100%
  left: 0

.chartico, .catico, .encico, .taxico, .dimico
   &.disabled
     filter: grayscale(100%) brightness(200%) opacity(60%)

for chart in charts
  .chartico.{chart}:before
    background-image: unquote("url(/icon/chart/" + chart + ".svg)")
  .chartico.{chart}.text
    &:after
      content: i18n('en',chart)
  .chartico.{chart}.text.zh
    &:after
      content: i18n('zh',chart)

