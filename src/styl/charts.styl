.chartico, .catico, .encico, .dimico
  text-align: center
  margin-bottom: 10px
  &:before
    background-size: 25600px 128px
    content: " "
    display: block
    width: 128px
    height: 128px
    background-color: #eee
    /*border: 5px solid #fff*/
    border-radius: 50%
    margin: auto
  &.fff:before
    background-color: #fff
.chartico.no-border, .catico.no-border, .encico.no-border, .dimico.no-border
  &:before
    border: 0

.taxico:before
  background-size: 25600px 128px
  content: " "
  display: block
  width: 128px
  height: 128px

.chartico.xs, .catico.xs, .encico.xs, .dimico.xs, .dimico.xs .taxico
  &:before
    background-size: 9600px 48px
    width: 48px
    height: 48px
    border-width: 4px
  margin-left: 5px
  margin-right: 5px
  display: inline-block

.chartico.sm, .catico.sm, .encico.sm, .dimico.sm, .dimico.sm .taxico
  &:before
    background-size: 12800px 64px
    width: 64px
    height: 64px
    border-width: 4px
  margin-left: 5px
  margin-right: 5px
  display: inline-block

.chartico.md, .catico.md, .encico.md, .dimico.md, .dimico.md .taxico
  &:before
    background-size: 18000px 90px
    width: 90px
    height: 90px
    border-width: 4px
  margin-left: 5px
  margin-right: 5px
  display: inline-block
.dimico.md .taxico
  margin: 0

.chartico.text, .catico.text, .encico.text, .dimico.text
  &:before
    background-color: #fff
    background-repeat: no-repeat
  margin-right: 10px
  margin-left: 10px
  width: auto!important
  &:after
    color: #444
    font-weight: 400
    font-size: 12px
    display: block

.chartico.shadow, .catico.shadow, .encico.shadow, .dimico.shadow
  &:before
    box-shadow: 0 2px 3px rgba(0,0,0,0.2)
    margin-bottom: 5px

.dimico
  position: relative
.taxico
  position: absolute
  top: 0
  left: 0
  width:100%
  height: 100%
  background-repeat: no-repeat
.dimico.text .taxico:after
  position: absolute
  bottom: -13px
  font-size: 12px
  width: 100%
  left: 0

.chartico:before
  background-image: url(/icon/c-chart.svg)
.chartico.raw:before
  background-image: url(/icon/n-chart.svg)

.catico:before
  background-image: url(/icon/c-cat.svg)
.catico.raw:before
  background-image: url(/icon/n-cat.svg)

.encico:before
  background-image: url(/icon/c-enc.svg)
.encico.raw:before
  background-image: url(/icon/n-enc.svg)

.dimico:before
  background-image: url(/icon/c-dim.svg)
.dimico.raw:before
  background-image: url(/icon/n-dim.svg)

.taxico:before
  background-image: url(/icon/c-tax.svg)
.taxico.raw:before
  background-image: url(/icon/n-tax.svg)

.chartico, .catico, .encico
   &.raw.disabled
     opacity: 0.2

for chart,index in charts
  .chartico.xs.{chart}:before
    background-position: index * -48px 0
  .chartico.sm.{chart}:before
    background-position: index * -64px 0
  .chartico.md.{chart}:before
    background-position: index * -90px 0
  .chartico.{chart}:before
    background-position: index * -128px 0
  .chartico.{chart}.text:after
    content: i18n('en',chart)
  .chartico.{chart}.text.zh:after
    content: i18n('zh',chart)

.chartico, .encico, .catico, .dimico
  &.raw:before
    border-radius: 0
    background-color: rgba(0,0,0,0)
    filter: grayscale(100%) brightness(90%) opacity(100%)


