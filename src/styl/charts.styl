.chartico, .catico
  text-align: center
  margin-bottom: 10px
  &:before
    content: " "
    display: block
    width: 128px
    height: 128px
    background: #eee
    border: 5px solid #fff
    border-radius: 50%
    margin: auto

.chartico.sm, .catico.sm
  &:before
    width: 64px
    height: 64px
    border-width: 4px
  margin-left: 5px
  margin-right: 5px
  display: inline-block

.chartico.md, .catico.md
  &:before
    width: 90px
    height: 84px
    border-width: 4px
    border-bottom: 0
  margin-left: 5px
  margin-right: 5px
  display: inline-block

.chartico.text, .catico.text
  &:before
    background: #fff
    background-position: center center
    background-repeat: no-repeat
  margin-right: 10px
  margin-left: 10px
  width: auto!important
  &:after
    color: #444
    font-weight: 400
    font-size: 12px
    display: block

for chart in charts
  .chartico.{chart}:before
    background-image: unquote("url(/icon/chart/" + chart + ".svg)")
  .chartico.{chart}.text
    &:after
      content: replace("-"," ","" + chart)

for category in categorys
  .catico.{category}:before
    background-image: unquote("url(/icon/cat/" + chart + ".svg)")
  .catico.{category}.text
    &:after
      content: replace("-"," ","" + category)
