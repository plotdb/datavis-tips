@import 'vars'
@import 'basic'

#landing
  background: url(/img/bk.png) center bottom no-repeat rgba(0,0,0,0.8)
  opacity: 1.0
  color: #fff
  .inner
    text-align: center
    margin: auto
    padding-bottom: 40px
    max-width: 1024px
    h1
      font-size: 4em
      font-weight: 100
      text-shadow: 5px 5px 6px rgba(0,0,0,0.5), -5px 5px 6px rgba(0,0,0,0.5)
    p
      font-weight: 100
      display: inline-block
      border-top: 1px solid rgba(255,255,255,0.2)
      padding-top: 5px

.headline.menu
  background: #fd3
  .inner
    max-width: 1024px
    margin: auto
    background: #ffdd33
    padding: 15px 20px 15px
    a
      color: #444
      text-decoration: none
    h4
      font-weight: 300
.headline .media, .section .media
  max-width: 1024px
  margin: auto
  padding: 40px 20px 0

.section
  max-width: 1024px
  margin: auto

.iconlist
  padding: 20px 0
  flexbox()
  flex-wrap(wrap)
  align-items: center
  a.icon
    text-decoration: none
  .icon
    flex(0 1 100px)
    margin-bottom: 30px
  .icon > div
    display: block
    margin: auto
