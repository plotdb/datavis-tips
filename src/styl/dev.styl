@import 'vars'
@import 'basic'

.content label, .content .title
  color: #000
  font-size: 1.1em
  font-weight: 500

#root
  margin: 20px

.preview
  width: 100%
  height: 300px
  background: #f4f4f4
  border-bottom: 1px solid #ddd
  overflow: scroll
.choices
  margin: 5px
  padding: 5px
  border-radius: 8px
  height: 28px
  background: rgba(255,255,255,0.8)
  box-shadow: 0 1px 1px rgba(0,0,0,0.3)
  .choice
    width: 16px
    height: 16px
    opacity: 0.5
    background: rgba(0,0,0,0.3)
    margin: 0 3px
    border-radius: 50%
    display: inline-block
    cursor: pointer
    &.active
      background: #fff
      box-shadow: inset 0 1px 2px rgba(0,0,0,0.5)


.avatar
  width: 128px
  height: 128px
  background: #eee
  border: 5px solid #fff
  border-radius: 50%
  margin: -64px 0 0 20px
  &.sm
    width: 64px
    height: 64px
    margin: 0 5px
    display: inline-block
    border-width: 4px

.similar
  position: relative
  padding-top: 28px
  float: right
  margin-right: 0
  margin-top: -122px
  text-align: right
  label
    display: inline-block
    background: rgba(64,64,64,0.5)
    color: #eee
    border-radius: 10px
    font-weight: 200
    text-align: center
    padding: 1px 5px 2px 10px
    border-radius: 8px 0 0 8px
    font-size: 12px
.content .title
  font-size: 32px
  font-weight: bold
  small
    font-size: 0.5em
    font-weight: 200
    color: #777
.panel-body
  padding-top: 0

.labels .label
  margin-right: 5px

label small
  color: #999

.chart-avatar
  text-align: center
  display: inline-block
  margin: 10px
  .avatar.sm
    width: 80px
    height: 80px
  .name
    font-size: 0.9em

#blah
  position: absolute
  top: 0
  left: 0
  width: 100%
  height: 100%
#blah.pdb-root
    padding-bottom: 0

.avatar.animated-scatter
  background-image: url(icon/animated-scatter.svg)
.avatar.paired-scatter
  background-image: url(icon/paired-scatter.svg)
.avatar.connected-scatter
  background-image: url(icon/connected-scatter.svg)
.avatar.scatter
  background-image: url(icon/scatter.svg)
.avatar.ternary
  background-image: url(icon/ternary.svg)
.avatar.connected-ternary
  background-image: url(icon/connected-ternary.svg)
.avatar.bcg-matrix
  background-image: url(icon/bcg-matrix.svg)

.panel.panel-default
  box-shadow: 0 3px 3px 1px rgba(0,0,0,0.15)
  border: 1px solid #aaa
  border-radius: 10px
  overflow: hidden

.footer
  width: 800px
  margin: 0 auto 10px
  padding-right: 5px
  text-align: right
  .label
    padding-bottom: .2em
  span
    color: #444
    vertical-align: middle
    font-size: 14px
    font-weight: 600
    font-family: lato, sans-serif
    margin-right: 5px
