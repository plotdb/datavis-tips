@import 'vars'
@import 'basic'

html,body
  width: 100%
  height: 100%
  margin: 0
  padding: 0
  font-family: lato, "Noto Sans TC", "Heiti TC", "LiHei Pro", sans-serif
  font-size: 1.0em
  color: #444
  background: #fff
  font-weight: 300

h1,h2,h3,h4,h5,h6
  font-weight: 400

body.card
  background: url(/img/bk.jpg) center center fixed

.pdb-root
  padding-bottom: 0

.grayed
  color: #999

.sep
  width: 100%
  height: 0
  border-bottom: 1px solid rgba(0,0,0,0.2)
.sep.gap
  margin: 20px 0
.sep.gap.lg
  margin: 60px 0

.anchor
  height: 0
  margin: 0

@import 'navbar'
@import 'landing'
@import 'charts'
@import 'plotdb'
@import 'card'
@import 'about'
