@import 'vars'
@import 'basic'

nav.navbar-default
  max-width: 800px
  margin: 0 auto
  border: none
  background: none
  box-shadow: none
.navbar-default
  .navbar-brand, .navbar-nav > li > a
    color: #444
    text-shadow: 0 0 3px rgba(255,255,255,1)
nav.navbar-default
  border-radius: 0
  .navbar-brand, .navbar-nav > li > a
    text-shadow: none
    font-size: 0.85em
    font-weight: 200

nav.navbar-default.invert
  .navbar-brand, .navbar-nav > li > a
    color: #fff
